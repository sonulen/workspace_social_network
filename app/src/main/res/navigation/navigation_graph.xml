<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph.xml"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.redmadrobot.app.ui.auth.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFirstFragment"
            app:destination="@id/signUpFirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.redmadrobot.app.ui.auth.signin.SignInFragment"
        android:label="SignInFragment">
        <action
            android:id="@+id/action_signInFragment_to_doneFragment"
            app:destination="@id/doneFragment" />
        <action
            android:id="@+id/action_signInFragment_pop"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signInFragment_to_signUpFirstFragment"
            app:destination="@id/signUpFirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/doneFragment"
        android:name="com.redmadrobot.app.ui.auth.DoneFragment"
        android:label="DoneFragment">
        <action
            android:id="@+id/action_doneFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.redmadrobot.app.ui.feed.FeedFragment"
        android:label="FeedFragment">
        <action
            android:id="@+id/action_feedFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFirstFragment"
        android:name="com.redmadrobot.app.ui.auth.signup.register.SignUpFirstFragment"
        android:label="SignUpFirstFragment">
        <action
            android:id="@+id/action_signUpFirstFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_signUpFirstFragment_to_signUpSecondFragment"
            app:destination="@id/signUpSecondFragment" />
        <action
            android:id="@+id/action_signUpFirstFragment_pop"
            app:popUpTo="@id/signUpFirstFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpSecondFragment"
        android:name="com.redmadrobot.app.ui.auth.signup.updateProfile.SignUpSecondFragment"
        android:label="SignUpSecondFragment">
        <action
            android:id="@+id/action_signUpSecondFragment_to_doneFragment"
            app:destination="@id/doneFragment" />
        <action
            android:id="@+id/action_signUpSecondFragment_pop"
            app:popUpTo="@id/signUpSecondFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
