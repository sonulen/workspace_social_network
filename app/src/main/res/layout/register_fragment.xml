<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/register_screen_name"
            app:titleTextAppearance="@style/TextAppearance.App.BodyL"
            app:navigationIcon="@drawable/icon_back_button"
            android:layout_marginTop="30dp"
            style="@style/Widget.MaterialComponents.Toolbar.Surface" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:progressTint="@color/orange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="@string/e_mail_hint"
                android:inputType="textEmailAddress"
                android:layout_marginVertical="10dp"
                style="@style/TextAppearance.App.BodyS"
                android:autofillHints="email" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:layout_marginVertical="10dp"
                style="@style/TextAppearance.App.BodyS"
                android:autofillHints="password" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <Button
                android:id="@+id/button_go_to_register"
                android:layout_width="328dp"
                android:layout_height="56dp"
                android:text="@string/button_already_register"
                android:layout_marginVertical="4dp"
                android:theme="@style/Widget.Workplaces.Button" />

            <Button
                android:id="@+id/button_register"
                android:layout_width="328dp"
                android:layout_height="56dp"
                android:enabled="false"
                android:text="@string/button_go_next"
                android:layout_marginVertical="4dp"
                android:theme="@style/Widget.Workplaces.SolidButton" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
